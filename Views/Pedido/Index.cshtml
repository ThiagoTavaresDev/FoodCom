@using ProjetoFoodCom.Models;
@model Item
<!DOCTYPE html>

<html>
<head>
    <title>Pedidos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="text-dark">
    <div class="container py-4">
        <!-- Header section -->
        <div class="border border-secondary rounded-3 p-3 mb-4">
            <h1 class="fs-4 mb-0 text-center">FoodCom - Seu Pedido</h1>
        </div>
        
        <!-- Main content -->
        <div class="border border-secondary rounded-3 p-4 mb-4">
            <div class="row">
                <!-- Image section -->
                <div class="col-md-5 mb-3 mb-md-0">
                    <div class="border border-secondary rounded-3 d-flex align-items-center justify-content-center" style="height: 220px;">
                        @if (Model != null && Model.Id > 0)
                        {
                            <img src="@Model.ImagemUrl" asp-append-version="true" class="img-fluid rounded-3 w-100 h-100" alt="@Model.Nome">
                        }
                        else
                        {
                            <span class="text-center text-secondary fs-1">IMAGE</span>
                        }
                    </div>
                    
                    <div class="mt-3">
                        <h5 class="text-center">Avaliações</h5>
                        <div class="d-flex justify-content-center">
                            <span class="text-warning me-1">★</span>
                            <span class="text-warning me-1">★</span>
                            <span class="text-warning me-1">★</span>
                            <span class="text-warning me-1">★</span>
                            <span class="text-secondary">★</span>
                        </div>
                    </div>
                </div>
           
                <!-- Details section -->
                <div class="col-md-7">
                    <h2 class="mb-3 border-bottom pb-2">Detalhes do pedido</h2>
                    
                    @if (Model != null && Model.Id > 0)
                    {
                        <div class="mb-3">
                            <h3 class="fs-4">@Model.Nome</h3>
                            <p class="text-secondary">@Model.Descricao</p>
                        </div>
                        
                        <div class="card border-secondary mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Preço:</span>
                                    <span class="fw-bold">R$ @Model.Preco.ToString("F2")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Tempo de Preparo:</span>
                                    <span>30 min</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Entrega:</span>
                                    <span>20 min</span>
                                </div>
                            </div>
                        </div>

                        <form asp-controller="Pedido" asp-action="ConfirmarPedido" asp-route-itemId="@Model.Id" method="post">
                        <div class="mb-3">
                            <label class="form-label">Quantidade</label>
                            <select name="quantidade" class="form-select text-dark border-secondary">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Confirmar Pedido</button>
                            <button type="button" class="btn btn-secondary" onclick="window.location.href='/'">Voltar</button>
                        </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            Produto não encontrado
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Footer section -->
        <div class="border border-secondary rounded-3 p-3 text-center">
            <small>© 2025 ProjetoFoodCom - Todos os direitos reservados</small>
        </div>
    </div>
</body>
</html>
